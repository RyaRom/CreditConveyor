<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="1" author="">
        <createTable tableName="client">
            <column name="client_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(255)"/>
            <column name="first_name" type="VARCHAR(255)"/>
            <column name="middle_name" type="VARCHAR(255)"/>
            <column name="birth_date" type="DATE"/>
            <column name="email" type="VARCHAR(255)"/>
            <column name="gender" type="VARCHAR(50)"/>
            <column name="marital_status" type="VARCHAR(50)"/>
            <column name="dependent_amount" type="INT"/>
            <column name="passport_id" type="jsonb"/>
            <column name="employment_id" type="jsonb"/>
            <column name="account" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="">
        <createTable tableName="credit">
            <column name="credit_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="amount" type="DOUBLE PRECISION"/>
            <column name="term" type="INT"/>
            <column name="monthly_payment" type="DOUBLE PRECISION"/>
            <column name="psk" type="DOUBLE PRECISION"/>
            <column name="insurance_enable" type="BOOLEAN"/>
            <column name="salary_client" type="BOOLEAN"/>
            <column name="credit_status" type="VARCHAR(50)"/>
        </createTable>
    </changeSet>

    <changeSet id="3" author="">
        <createTable tableName="application">
            <column name="application_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="client_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_application_client" references="client(client_id)"/>
            </column>
            <column name="credit_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_application_credit" references="credit(credit_id)"/>
            </column>
            <column name="status" type="VARCHAR(50)"/>
            <column name="creation_date" type="TIMESTAMP"/>
            <column name="sign_date" type="TIMESTAMP"/>
            <column name="applied_offer" type="jsonb"/>
            <column name="sec_code" type="VARCHAR(255)"/>
            <column name="status_history_id" type="jsonb"/>
        </createTable>
    </changeSet>

    <changeSet id="4" author="">
        <createTable tableName="payment_schedule_element">
            <column name="schedule_element_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="credit_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_payment_schedule_element_credit" references="credit(credit_id)"/>
            </column>
            <column name="number" type="INT"/>
            <column name="date" type="DATE"/>
            <column name="total_payment" type="DOUBLE PRECISION"/>
            <column name="interest_payment" type="DOUBLE PRECISION"/>
            <column name="debt_payment" type="DOUBLE PRECISION"/>
            <column name="remaining_debt" type="DOUBLE PRECISION"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
